<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="78dp"
        android:layout_height="78dp"
        app:strokeColor="@color/color_primary_subtle"
        >
        
        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/market"/>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Product Name"
            android:textColor="@color/color_text_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_product_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attribute"
            android:textSize="12sp"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/color_text_secondary" />

        <TextView
            android:id="@+id/tv_product_price"
            style="@style/PrimaryTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚º0,00"
            android:textSize="14sp"
            />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="0dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp"

        android:layout_marginLeft="12dp"
        android:layout_marginRight="2dp"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:cardCornerRadius="8dp"
            app:strokeWidth="0dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_decrement_container"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    app:cardCornerRadius="1dp"
                    >
                    <ImageView
                        android:id="@+id/iv_decrement_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_trash"
                        android:layout_gravity="center"/>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="38dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:background="@color/color_primary"
                    >

                    <TextView
                        android:id="@+id/tv_product_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="16sp"
                        >

                    </TextView>
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_increment_container"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    app:cardCornerRadius="1dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_plus" />

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>