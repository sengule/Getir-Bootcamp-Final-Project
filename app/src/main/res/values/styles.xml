<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="SecondaryTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="App.Add.Cart.Button" parent="ThemeOverlay.Material3.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="backgroundTint">@color/color_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

</resources>